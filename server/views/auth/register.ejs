<% include ../partials/header.ejs %>

    <!-- Render the Registration form  -->
    <main>
        <!-- Display flash messages  -->
        <% if (messages.length > 0) { %>
            <div class="alert alert-danger">
                <%= messages %>
            </div>
            <% } %>

                <h1>User Registration</h1>
                <form method="post">
                    <fieldset class="form-group">
                        <label for="email">Email: *</label>
                        <input name="email" type="email" class="form-control" required autofocus />
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="username">Username: *</label>
                        <input name="username" type="text" class="form-control" required />
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="password">Password: *</label>
                        <input name="password" type="password" class="form-control" required />
                    </fieldset>
                    <fieldset class="form-group">
                        <label for="displayName">Display Name: *</label>
                        <input name="displayName" type="text" class="form-control" required />
                    </fieldset>
                    <div class="g-recaptcha" data-sitekey="6LdWqB0UAAAAAFoTBH-lObBNciWqDIfdgXrVkrVV"></div>
                    <fieldset class="form-group text-right">
                        <input type="submit" class="btn btn-success" value="Submit" />
                        <a href="/">
                            <input type="button" class="btn btn-warning" value="Cancel" />
                        </a>
                    </fieldset>

                </form>

                </div>
    </main>



    <% include ../partials/footer.ejs %>